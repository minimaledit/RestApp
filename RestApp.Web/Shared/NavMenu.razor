            </NavLink>
        </div>
    <AuthorizeView>
        <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="temp" >
                        <span class="oi oi-plus" aria-hidden="true"></span> Temp
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="users">
                        <span class="oi oi-plus" aria-hidden="true"></span> All Users
                    </NavLink>
